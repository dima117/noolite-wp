<UserControl x:Class="NooliteSmartHome.Pages.GroupItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
	Height="Auto"
    d:DesignHeight="260">

	<StackPanel>
		<TextBlock x:Name="TbChannelName" Style="{StaticResource PhoneTextGroupHeaderStyle}" />
		<StackPanel x:Name="PanelSlider" Orientation="Vertical">
			<TextBlock Text="яркость" Style="{StaticResource PhoneTextSmallStyle}" />
			<Slider Minimum="0" Maximum="100" Value="65" Background="{StaticResource PhoneChromeBrush}" ></Slider>
		</StackPanel>
		<StackPanel x:Name="PanelLed" Orientation="Horizontal">
			<Button Content="цвет"></Button>
			<Button Content="перелив"></Button>
			<Button Content="стоп" Width="132"></Button>
		</StackPanel>
	</StackPanel>
</UserControl>